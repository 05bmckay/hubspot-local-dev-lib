{
  "compilerOptions": {
    "target": "esnext",
    "module": "ESNext",
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "plugins": [
      {
        "name": "importable",
        "plugins": ["@importable/yaml"]
      }
    ]
  },
  "include": [
    "config",
    "constants",
    "errors",
    "http",
    "lib",
    "types",
    "utils",
    "lang"
  ],
  "exclude": ["node_modules", "**/__tests__/*", "**/__mocks__/*"]
}
